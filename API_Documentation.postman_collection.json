            },
            "url": {
              "raw": "{{base_url}}/category/1/service/1",
              "host": ["{{base_url}}"],
              "path": ["category", "1", "service", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Service",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/category/1/service/1",
              "host": ["{{base_url}}"],
              "path": ["category", "1", "service", "1"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Price Options",
      "item": [
        {
          "name": "Add Price Option",
          "request": {
            "method": "POST",
            "header": [
              {
