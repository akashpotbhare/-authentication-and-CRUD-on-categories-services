            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"duration\": 3,\n  \"price\": 75.00,\n  \"priceType\": \"Hourly\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/service/1/price-option",
              "host": ["{{base_url}}"],
